<p id="notice"><%= notice %></p>

<p id="show-image">
<img src="<%= @product.image_url %>" height="300" width="400">
</p>
<div id="show-format">
<p id="show-name">
  <!-- Product Name -->
  <%= @product.name %>
</p><br>

<p id="show-description">
  <%= @product.description %>
</p><br>

<p id="show-info">
  <strong>Color:</strong>
  <%= @product.color %>

  <strong>Price:</strong>
  <%= @product.price %>
</p><br>
<p id="show-rating"> 
	Average Rating:
</p> <br>
<div class="rated" id="show-rating" data-score="<%= @product.average_rating %>"></div>
<%= form_tag "/payments/create" do %>
	<%= render partial: "shared/stripe_checkout_button" %>
	<%= hidden_field_tag(:product_id, @product.id) %>
<% end %>
</div>
<p id="show-comment">
<%= render 'new_comment' %>
</p>
<%= render 'comments' %>
<p>
<%= will_paginate @comments %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

