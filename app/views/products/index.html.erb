<h1 class="header">Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr id="product-color">
        <td id="product-content"><%= product.name %></td>
        <td id="product-content"><%= product.description %></td>
        <td id="product-content"><%= product.image_url %></td>
        <td id="product-features"><%= link_to 'Show', product %></td>
        <td id="product-features"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td id="product-features"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="new-product"><%= link_to 'New Product', new_product_path %></p>
